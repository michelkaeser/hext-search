-cmd mkdir -p bin
-cmd haxelib install mcover

# C++
--next
-cp   src
-cp   tests
-main hxsearch/tests/Runner.hx
-lib  hxstd
-lib  mcover
-cpp  bin/cpp
-D    HXCPP_M64
-D    HXCPP_NO_COLOUR
--macro mcover.MCover.coverage([''], ['src'])
-cmd  ./bin/cpp/Runner

